{
  "compilerOptions": {
    "target": "es2015",                       
    "module": "es2015",                      
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "esnext.asynciterable"
    ],                                      
    "sourceMap": true,                     
    "strict": true,                       
    "noImplicitAny": true,               
    "strictNullChecks": true,           
    "noImplicitThis": true,            
    "alwaysStrict": true,             
    "noImplicitReturns": true,       
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",       
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}

